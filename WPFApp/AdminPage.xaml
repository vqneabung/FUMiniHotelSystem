<Window x:Class="WPFApp.AdminPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Title="AdminPage" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="50">
            <StackPanel Margin="50" Height="100">
                <TextBlock FontSize="75" HorizontalAlignment="Center">
             Admin
                </TextBlock>
            </StackPanel>
            <StackPanel Height="96" Width="701" Orientation="Horizontal">
                <Button Height="30" Width="120" Margin="20 0" Click="btnProfile_Click" Content="Manage User"/>
                <Button Height="30" Width="120" Margin="20 0" Click="btnManageRoom_Click" Content="Manage Room"/>
                <Button Height="30" Width="120" Margin="20 0" Click="btnManageRoomType_Click" Content="Manage Room Type"/>
                <Button Height="30" Width="185" Margin="20 0" Click="btnBookingReservation" Content="Booking Reservation"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
